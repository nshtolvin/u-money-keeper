        # center area with pie chart
        MDBoxLayout:
            id: central_group
            orientation: 'vertical'

            MDLabel:
                id: lbl_total
                text: 'Расходы: %.2f' % (0)
                font_style: 'Subtitle1'
                halign: 'center'
                size_hint: (1, .15)

            PieChart:
                id: pie_chart
                size_hint: (1, .85)

        # right group of buttons
        ScrollView:
            id: right_btn_gr
            size_hint: (.65, 1)

