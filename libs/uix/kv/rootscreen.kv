#:import NavDrawer libs.uix.baseclass.navdrawer.NavDrawer
#:import MainScreen libs.uix.baseclass.mainscreen.MainScreen
#:import License libs.uix.baseclass.license.License
#:import About libs.uix.baseclass.about.About


<RootScreen>:
    ScreenManager:
        MDScreen:
            MDBoxLayout:
                orientation: 'vertical'

                MDToolbar:
                    id: action_bar
                    background_color: app.theme_cls.primary_color
                    title: app.title
                    left_action_items: [['menu', lambda x: nav_drawer.set_state('toggle')]]
                    right_action_items:[['calendar', lambda x: app.show_calendar()]]
                    elevation: 10
                    md_bg_color: app.theme_cls.primary_color
                    pos_hint: {"top": 1}

                ScreenManager:
                    id: scr_manager
                    size_hint_y: None
                    height: root.height - action_bar.height

                    MainScreen:
                        id: main

                    License:
                        id: license

                    About:
                        id: about

    MDNavigationDrawer:
        id: nav_drawer
#        type: 'standard'
#        close_on_click: 'true'

        NavDrawer:
