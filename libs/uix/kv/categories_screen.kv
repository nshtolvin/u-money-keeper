<CategoriesScreen>:
    name: 'categories'

    MDBoxLayout:
        id: categories_box_layout
        orientation: 'horizontal'

        # left group of buttons
        ScrollView:
            id: left_btn_gr
            size_hint: (.65, 1)

            MDList:
                id: left_btn_list

